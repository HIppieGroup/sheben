<div class="col-md-12">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3>Услуги</h3>
		</div>
	</div>
	<table class="table table-striped">
		<tr>
			<th>Название услуги</th>
			<th>Цена</th>
			<th>Положение</th>
			<th></th>
			<th></th>
		</tr>
		<% @service.each do |s| %>
		<tr>
			<td><%= s.title %></td>
			<td><%= s.many %></td>
			<td>
				<%= if s.gorizont 
					render plain: "Горизонтальное"
				else
					render plain: "Вертикальное"
					end%>			
			</td>

			<td><%= link_to 'Редактировать', edit_admin_service_path(s), class: "btn btn-warning" %></td>
			<td><%= link_to 'Удалить', admin_service_path(s), class: "btn btn-danger", method: :delete, data: {confirm: 'Вы уверены?'} %></td>
		</tr>
			<% end %>
	</table>
	<%= link_to 'Создать новую услугу' , new_admin_service_path, class: "btn btn-success" %>
</div>