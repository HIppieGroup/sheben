
<%  @page.each do |page| %>

<div class="col-md-12">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3><%= page.title %></p></h3>
		</div>
	</div>
</div>
<div class="col-md-6 ">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title"><p>Изображение страницы</p></h3>
		</div>
		<div class="panel-body">
			<%= image_tag page.image, class: "img-responsive" %>
		</div>
	</div>
</div>
<div class="col-md-6 ">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title"><p>Описание страницы</p></h3>
		</div>
		<div class="panel-body">
			<p><%= page.description %></p>
		</div>
	</div>
</div>
<div class="col-md-6">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title"><p>Контактная информация</p></h3>
		</div>
		<div class="panel-body">
			<table class="table">
				<tr>
					<td>Контактный телефон</td>
					<td><%= page.phone %></td>
				</tr>
				<tr>
					<td>Контактная почта</td>
					<td><%= page.email %></td>
				</tr>
			</table>

		</div>
	</div>
</div>
<div class="col-md-12">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title"><p>Информаия о компании</p></h3>
		</div>
		<div class="panel-body">
			<table class="table">
				<tr>
					<th><%= page.about_title %></th>
				</tr>
				<tr>
					<td><%= page.about_description %></td>
				</tr>
			</table>
		</div>
	</div>
</div>	
<div class="col-md-12">
	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title"><p>Содержание футора</p></h3>
		</div>
		<div class="panel-body">
			<table class="table">
				<tr>
					<th><%= page.info_title %></th>
				</tr>
				<tr>
					<td><%= page.info_description %></td>
				</tr>
			</table>

		</div>
	</div>
</div>	
<div class="col-md-12">
	<%= link_to 'Редактировать страницу', edit_admin_pages_path(page), class: "btn btn-warning" %>	
</div>

<%end%>
